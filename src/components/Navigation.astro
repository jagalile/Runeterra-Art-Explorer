---
const { pageTitle } = Astro.props;

const regions = [
  "Noxus",
  "Demacia",
  "Runeterra",
  "Freljord",
  "Shadow Isles",
  "Targon",
  "Ionia",
  "Shurima",
  "Bilgewater",
  "Piltover & Zaun",
  "Bandle City",
];
---

<nav class="sticky top-0 pt-5 pb-5 navbar">
  <h1 class="font-bold text-3xl text-center mb-3">{pageTitle}</h1>
  <div class="grid grid-cols-11 gap-1 mx-auto justify-items-center">
    {regions.map((region) => <a class="nav-links navbar-item text-lg uppercase">{region}</a>)}
  </div>
</nav>
