---
const { pageTitle } = Astro.props;

const regions = [
  "Noxus",
  "Demacia",
  "Runeterra",
  "Freljord",
  "Shadow Isles",
  "Targon",
  "Ionia",
  "Shurima",
  "Bilgewater",
  "Piltover & Zaun",
  "Bandle City",
];
---

<nav
  class="nav-links sticky top-0 pt-4 pb-6 navbar grid grid-cols-12 gap-1 mx-auto justify-items-center"
>
  <h1 class="font-bold text-2xl">{pageTitle}</h1>
  {regions.map((region) => <a class="navbar-item">{region}</a>)}
</nav>
