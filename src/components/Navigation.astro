<nav class="sticky top-0 bg-background-100 z-10">
  <div class="flex flex-wrap items-center justify-between mx-auto p-5">
    <a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
      <!-- <img
        src="/dist/img/icon-all.png"
        class="h-8"
        alt="Rueneterra Logo"
      /> -->
      <span
        class="self-center text-2xl font-semibold whitespace-nowrap text-accent-100"
        >{pageTitle}</span
      >
    </a>
    <button
      data-collapse-toggle="navbar-default"
      type="button"
      class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm rounded-lg md:hidden focus:outline-none"
      aria-controls="navbar-default"
      aria-expanded="false"
    >
      <span class="sr-only">Open main menu</span>
      <svg
        class="w-5 h-5"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 17 14"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 1h15M1 7h15M1 13h15"></path>
      </svg>
    </button>
    <div class="hidden w-full md:block md:w-auto" id="navbar-default">
      <ul
        class="font-medium flex flex-col p-4 md:p-0 mt-4 md:flex-row md:space-x-8 rtl:space-x-reverse md:mt-0 md:border-0"
      >
        {
          regions.map((region) => (
            <li class="hover:bg-background-200 hover:rounded-md">
              <a
                href={region[2]}
                class="block py-2 px-3 md:p-0"
                aria-current="page"
              >
                <img src={region[1]} class="h-8" alt={region[0]} />
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
